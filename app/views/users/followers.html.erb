
<h3> Followers of <%= @user.name %>    </h3>
<%= link_to 'Back' ,users_path%>

<table>
  <th>Name</th>
  <th>Screen Name</th>
  <th>Twitter Id</th>
  <th>Followers Count</th>
  <th></th>
  <% unless @followers.blank? %>
      <% @followers.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.screen_name %></td>
            <td><%= user.twitter_id %></td>
            <td><%=  user.followers_count  %></td>
            <td><%= link_to 'Followers' ,followers_path(user.screen_name) %></td>
          </tr>
      <% end  %>
  <% end %>

</table>
<%= link_to 'Back' ,users_path%>
