                <li><a href="#">7</a></li>
                <li><a href="#">8</a></li>
                <li><a href="#">9</a></li>
                <li><a href="#">10</a></li>
                <li><a href="#">11</a></li>
                <li><a href="#">12</a></li>
                <li><a href="#">13</a></li>
                <li><a href="#">14</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
            <div class="clearfix"></div>
         </div>
         <!-- pagination ends --> 
          <% end %>
    </section>
    <!-- search result ends -->
    
</article>
<!-- body container ends -->