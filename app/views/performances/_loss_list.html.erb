<% unless loss_list.gain %>
<% item =  loss_list.item %>
	<tr>
		<td><%= item.id %></td>
		  <td>$<%= loss_list.price.present? ? loss_list.price : 0.0 %></td>
		  <td>$<%= item.current_price %></td>
		  <td>$<%= loss_list.loss_price %> </td>
		  <td class="red_txt"><%= loss_list.loss_percent(item.current_price) %> %</td>
		 <td><%= loss_list.tarde_type %> </td>		
	</tr>
<% end %>